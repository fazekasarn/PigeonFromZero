<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PigeonFromZero" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- gombok -->
        <item name="colorPrimary">@color/primaryColor</item>
        <!-- status bar -->
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>

        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#00000000</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/animation_background</item>
        <item name="colorAccent">#FF5722</item>
    </style>

    <style name="ToolbarColored" parent="Theme.PigeonFromZero">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="PedigreeTextViewStyle" parent="Theme.PigeonFromZero">
        <item name="android:padding">@dimen/pedigree_textview_padding</item>
        <item name="android:background">@drawable/border</item>
    </style>

</resources>